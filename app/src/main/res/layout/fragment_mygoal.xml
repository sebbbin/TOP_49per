<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_grid"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mygoal_title"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:fontFamily="@font/default_bold"
        android:gravity="center"
        android:text="나의 목표"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mygoal_text1"
        android:layout_below="@+id/mygoal_title"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:fontFamily="@font/default_bold"
        android:gravity="bottom|center"
        android:text="오늘의 목표 토마토 개수를 설정해주세요."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mygoal_text2"
        android:layout_below="@+id/mygoal_text1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/default_bold"
        android:gravity="center_horizontal"
        android:text="토마토 개수는 뽀모도로 공부법에 의거하여 측정됩니다.                          ex) 순 공부시간 100분 기준 1개, 1일 최대 14개"
        android:textAlignment="gravity"
        android:textColor="#878181"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_below="@+id/mygoal_text2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/goal"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/tomato_3d" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/mygoal_text2"
        android:gravity="center"
        android:text="       개"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />


</RelativeLayout>