<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_grid"
    android:paddingBottom="60dp">
    <ImageView
        android:id="@+id/fragment_mypage_profile_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/mypage_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"/>
    
    <ImageView
        android:id="@+id/fragment_mypage_tear_iv"
        android:layout_width="37dp"
        android:layout_height="37dp"
        app:layout_constraintTop_toTopOf="@id/fragment_mypage_profile_iv"
        app:layout_constraintStart_toEndOf="@id/fragment_mypage_profile_iv"
        android:layout_marginTop="9dp"
        android:layout_marginStart="15dp"
        />
    
    <TextView
        android:id="@+id/fragment_mypage_tier_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toEndOf="@id/fragment_mypage_tear_iv"
        app:layout_constraintTop_toTopOf="@id/fragment_mypage_tear_iv"
        app:layout_constraintBottom_toBottomOf="@id/fragment_mypage_tear_iv"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/default_bold"/>
    <TextView
        android:id="@+id/fragment_mypage_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="@id/fragment_mypage_tear_iv"
        android:textSize="18sp"
        android:fontFamily="@font/default_regular"
        app:layout_constraintTop_toBottomOf="@id/fragment_mypage_tear_iv"
        app:layout_constraintBottom_toBottomOf="@id/fragment_mypage_profile_iv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_mypage_member_out_tv"
        app:layout_constraintStart_toStartOf="@id/fragment_mypage_profile_iv"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_mypage_profile_iv"
        android:layout_marginTop="80dp"
        android:text="회원 탈퇴"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:fontFamily="@font/default_regular"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_mypage_logout_tv"
        app:layout_constraintStart_toStartOf="@id/fragment_mypage_profile_iv"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_mypage_member_out_tv"
        android:layout_marginTop="30dp"
        android:text="로그아웃"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:fontFamily="@font/default_regular"/>

    <TextView
        android:id="@+id/fragment_mypage_member_out_arrow_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/default_regular"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/fragment_mypage_member_out_tv"
        app:layout_constraintBottom_toBottomOf="@id/fragment_mypage_member_out_tv"/>

    <TextView
        android:id="@+id/fragment_mypage_logout_out_arrow_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/default_regular"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/fragment_mypage_logout_tv"
        app:layout_constraintBottom_toBottomOf="@id/fragment_mypage_logout_tv"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
        <TextView
            android:id="@+id/fragment_mypage_with_tomate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="톰메이트와 "
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/default_bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/fragment_mypage_day_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="50sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/default_bold"
            android:textColor="@color/black"/>

    </LinearLayout>
